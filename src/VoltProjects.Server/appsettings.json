{
  "VoltProjects": {
    "SitesBuildDir": "Temp/",
    "SitesServingDir": "Sites/",
    "SitesRebuildTimeSeconds": 1209600,
    "SitesServingCacheHeaderTimeSeconds": 1209600,
    "Projects": [
      {
        "Name": "WikiNet",
        "GitPath": "/media/liam/Data/Projects/2019/Wiki.Net/"
      }
    ]
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "WriteTo": [
      {
        "Name":  "Console",
        "Args": {
          "outputTemplate": "{Timestamp:dd-MM hh:mm:ss tt} [{Level:u3}] [T: {ThreadId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name":  "File",
        "Args": {
          "path": "Logs/log.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:dd-MM hh:mm:ss tt} [{Level:u3}] [T: {ThreadId}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    }
  },
  "AllowedHosts": "localhost"
}
