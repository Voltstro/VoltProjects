@using VoltProjects.Shared.Models
@model VoltProjects.Server.Models.View.Admin.BuildEventsModel
@{
    ViewBag.Title = "Build Events";
}

<div class="container pt-4">
    <div class="card">
        <div class="card-header">
            Build Events
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Project</th>
                    <th scope="col">Version Tag</th>
                    <th scope="col">Successful</th>
                    <th scope="col">Message</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (ProjectBuildEvent buildEvent in Model.ProjectBuildEvents)
                {
                <tr>
                    <th>@buildEvent.Id</th>
                    <td>@buildEvent.Project.Project.Name</td>
                    <td>@buildEvent.Project.VersionTag</td>
                    <td>
                        @if (buildEvent.Successful)
                        {
                            <i class="bi bi-check-circle text-success fs-3"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle text-danger fs-3"></i>
                        }
                    </td>
                    <td>@buildEvent.Message</td>
                    <td><a asp-controller="Admin" asp-action="BuildEvent" asp-route-eventId="@buildEvent.Id" class="btn btn-primary">View Logs</a></td>
                </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
