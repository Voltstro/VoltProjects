@using VoltProjects.Shared.Models
@model VoltProjects.Server.Models.View.Admin.ProjectsPageModel
@{
    ViewBag.Title = "Projects";
}

<div class="container pt-4">
    <div class="card">
        <div class="card-header">
            Project List
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Display Name</th>
                    <th scope="col">Git URL</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (Project project in Model.Projects)
                {
                    <tr>
                        <th scope="row">@project.Id</th>
                        <td>@project.Name</td>
                        <td>@project.DisplayName</td>
                        <td><a href="@project.GitUrl" target="_blank">@project.GitUrl <i class="bi bi-box-arrow-up-right"></i></a></td>
                        <td><a asp-controller="Admin" asp-action="Project" asp-route-id="@project.Id" class="btn btn-primary">Edit</a></td>
                    </tr>
                }
                </tbody>
            </table>
            
            <a asp-route="new" class="btn btn-primary">New</a>
        </div>
    </div>
</div>

