@using VoltProjects.Server.Core.Helper
@{
  string pageTitle = $"{ViewBag.Title} - VoltProjects";
}
<!DOCTYPE html>
<html>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content="@ViewBag.Description">
<meta name="keywords" content="Voltstro,Voltstro-Studios,Docs,Documentation">
<!-- Social Media Tags -->
<meta name="og:type" content="website" />
<meta name="og:title" content="@pageTitle" />
<meta name="og:description" content="@ViewBag.Description" />
<meta name="og:image" content="https://projects.voltstro.dev/icon.png" />
<meta name="og:image:alt" content="VoltProject's Icon" />

<!-- Links & other stuff -->
<title>@pageTitle</title>
<link rel="icon" type="image/x-icon" href="~/favicon.ico"/>
<link rel="stylesheet" href="~/dist/main.css" />
<body>
<header>
  <nav class="navbar navbar-expand-md navbar-dark">
    <div class="container-xxl">
      <a class="navbar-brand" asp-controller="Main" asp-action="Index">Volt Projects</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbar">
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <a class="nav-link @Html.ActiveClass("Main", "About")" asp-controller="Main" asp-action="About">About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
<main class="container-xxl">
  @RenderBody()
</main>
<script type="text/javascript" src="~/dist/site.js" defer></script>
</body>
</html>